<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Question and Answers</h1>


<div style="padding-left: 4em ">

<h2><%= @question.title %></h2>

  <div class="definelength" >
    <p> <%= @question.description %> </p>
  </div>

  <%= form_tag(edit_question_path(@question), method: :get) do %>
    <div class="actions">
      <%= submit_tag 'Edit Question' %>
    </div>
  <% end %>

  <%= form_tag(question_path(@question), method: :delete) do %>
    <div class="actions">
      <%= submit_tag 'Delete Question' %>
    </div>
  <% end %>

</div>

<h3>Answers:</h3>

<div class="definelength">
  <ol>
    <% @answers.each do |answer| %>
    <li><%= answer.description %></li>
  </br>
    <% end %>
  </ol>
</div>


<%= form_for [@question, @answer] do |f| %>
  <div class="field">
    <%= f.label :description, "Submit Answer Below." %><br />
    <%= f.text_area :description, size: "50x15" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Answer" %>
  </div>
<% end %>

</br>

<%= link_to "back to questions list", questions_path %>
